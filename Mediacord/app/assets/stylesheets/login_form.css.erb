.background {
  background-image: url(<%= asset_path 'background1.jpg' %>);
  height: 100vh;
}

.form-container {
  align-items: center;
  bottom: 0;
  display: flex;
  justify-content: center;
  left: 0;
  position: absolute;
  right: 0;
  top: 0;
  font-family: 'Libre Franklin', sans-serif;
}

.session-form {
  background: #36393f;
  border-radius: 5px;
  box-sizing: border-box;
  color: #72767d;
  font-size: 18px;
  padding: 40px;
  width: 480px;
}

.centeringWrapper {
  text-align: center;
}

.title {
  font-size: 26px;
  line-height: 32px;
  color: #fff
}

.subTitle {
  line-height: 22px;
}

.input-title {
  color: #b9bbbe;
  margin: 0;
}

#password {
  margin-top: 10px;
}

.input-default{
  height: 40px;
  padding: 10px;
  background-color: rgba(0,0,0,.1);
  border-color: rgba(0,0,0,.3);
  color: #f6f6f7;
  border-radius: 3px;
  border-style: solid;
  border-width: 1px;
  box-sizing: border-box;
  width: 100%;
}

.block {
  text-align: left;
  width: 100%;
}

.submit-button {
  background-color: #7289da;
  color: #fff;
  font-size: 16px;
  margin-bottom: 8px;
  width: 100%;
  height: 44px;
}

.button-content {
  text-align: center;
}

.forgot-password {
  padding: 10px;
  padding-left: 0px;
  padding-top: 3px;
  font-size: 14px;
}

.link-color {
  color: #7289da;
}

.need-account {
  line-height: 16px;
  font-size: 14px;
  padding-right: 5px;
}

.register {
  line-height: 16px;
  font-size: 14px;
}

.demo {
  text-align: right;
}

.flex {
  display: flex;
  width: 100%;
}

.error {
  color: red;
  text-align: center;
}
