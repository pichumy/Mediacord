.background {
  background-image: url(<%= asset_path 'background1.jpg' %>);
  height: 100vh;
  width: 100vw;
}

.form-container {
  -webkit-box-align: center;
  -webkit-box-pack: center;
  align-items: center;
  bottom: 0;
  display: flex;
  height: auto;
  justify-content: center;
  left: 0;
  position: absolute;
  right: 0;
  top: 0;
  width: auto;
  font-family: 'Libre Franklin', sans-serif;
}

.session-form {
  background: #36393f;
  border-radius: 5px;
  box-shadow: 0 2px 10px 0 rgba(0,0,0,.2);
  box-sizing: border-box;
  color: #72767d;
  font-size: 18px;
  padding: 40px;
  width: 480px;
}

.centeringWrapper {
  text-align: center;
  width: 100%;
}

.title {
  font-size: 26px;
  line-height: 32px;
  color: #fff
}

.subTitle {
  color: #72767d;
  font-size: 18px;
  line-height: 22px;
}

.input-title {
  color: #b9bbbe;
}

.input-default{
  height: 40px;
  padding: 10px;
  background-color: rgba(0,0,0,.1);
  border-color: rgba(0,0,0,.3);
  color: #f6f6f7;
  border-radius: 3px;
  border-style: solid;
  border-width: 1px;
  box-sizing: border-box;
  outline: none;
  width: 100%;
}

.block {
  text-align: left;
  width: 100%;
}

.submit-button {
  background-color: #7289da;
  color: #fff;
  font-size: 16px;
  line-height: 24px;
  margin-bottom: 8px;
  width: 100%;
  height: 44px;
  min-height: 44px;
  min-width: 130px;
}

.button-content {
  margin: 0 auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}

button {
  text-rendering: auto;
  letter-spacing: normal;
  word-spacing: normal;
  text-transform: none;
  text-indent: 0px;
  text-shadow: none;
  display: inline-block;
  margin: 0em;
}

.forgot-password {
  margin: 0 auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
  vertical-align: baseline;
  line-height: 16px;
  padding: 10px;
  padding-left: 0px;
  padding-top: 3px;
  font-size: 14px;
}

.link-color {
  color: #7289da;
}

.need-account {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  vertical-align: baseline;
  line-height: 16px;
  font-size: 14px;
  padding-right: 5px;
}

.register {
  margin: 0 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  vertical-align: baseline;
  line-height: 16px;
  font-size: 14px;
  padding-right: 5px;
}

.demo {
  text-align: right;
}

.flex {
  display: flex;
  justify-content: space-between;
}

.error {
  color: red;
  text-align: center; 
}
