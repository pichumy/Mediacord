.home {
  width: 100vw;
  height: 100vh;
  -webkit-box-direction: normal;
  -webkit-box-orient: vertical;
  background-color: #36393f;
  display: flex;
  position: absolute;
  overflow: hidden;
  flex: 1 1 auto;
  flex-wrap: nowrap;
  -webkit-box-pack: start;
  justify-content: flex-start;
  -webkit-box-align: stretch;
  align-items: stretch;
}

.search-bar{
  -webkit-box-direction: normal;
  -webkit-box-flex: 1;
  -webkit-box-orient: horizontal;
  background: rgba(0,0,0,.2);
  border: 1px solid rgba(0,0,0,.1);
  border-radius: 4px;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  flex: 1;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 2px;
position: relative;
}
.search-bar input {
  -webkit-box-flex: 1;
  background: transparent;
  border: none;
  box-sizing: border-box;
  color: #fff;
  flex: 1;
  font-size: 12px;
  height: 26px;
  min-width: 50px!important;
  padding: 5px 7px;
  resize: none;
}

.FriendsHome {
  -webkit-box-align: center;
  -webkit-box-direction: normal;
  -webkit-box-orient: horizontal;
  align-items: center;
  border-radius: 3px;
  box-sizing: border-box;
  color: #fff;
  display: flex;
  flex-direction: row;
  font-weight: 400;
  height: 40px;
  margin: 1px 0 1px 8px;
  padding: 8px;
  text-decoration: none;
  font-family: Arial;
}

.PersonWaving {
  height: 24px;
  margin-right: 18px;
  opacity: .6;
  transition: opacity .05s;
  width: 24px;
}
